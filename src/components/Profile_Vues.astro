const { vues } = Astro.props;
const abonnement=localStorage.getItem("abonnement")
//console.log(abonnement)
var vuePersonne=true
if(abonnement==''){
    vuePersonne=false
}
//console.log(vues.length)
---

<style>
    #imgPhoto {
            height: 20%;
            width: 20%;
            border-radius: 20%;
        }
</style>

<div class="tab-pane fade" id="vues" role="tabpanel">
    <div class="p-lr-15-md" style="padding-left:30%">
