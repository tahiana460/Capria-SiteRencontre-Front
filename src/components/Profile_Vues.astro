        {vuePersonne&&
        <table class="w-75">
        {vues.map((profil:any)=>(
            //console.log(profil.pseudo);
            <tr>
                <td class="pb-2 w-50">
                    <img id="imgPhoto" src={'photo/'+profil.profile_picture} alt="IMG-PRODUCT">
