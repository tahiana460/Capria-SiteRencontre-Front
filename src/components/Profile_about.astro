        <table class="w-75">
            <tr>
                <td class="pb-2 w-50"><span class="stext-102 cl3 size-205">Nom</span></td>
                <td class="text-left"><span class="stext-102 cl6 size-206">{user.nom}</span></td>
            </tr>
            <tr>
                <td class="pb-2"><span class="stext-102 cl3 size-205">Prénom</span></td>
                <td class="text-left"><span class="stext-102 cl6 size-206">{user.prenom}</span></td>
            </tr>
            <tr>
                <td class="pb-2"><span class="stext-102 cl3 size-205">Sexe</span></td>
                <td class="text-left"><span class="stext-102 cl6 size-206">{user.sexe == 'H' && 'Homme' || 
                                                                            user.sexe == 'F' && 'Femme' ||
                                                                            user.sexe == 'A' && 'Autre'}</span></td>
            </tr>
            <tr>
                <td class="pb-2"><span class="stext-102 cl3 size-205">Age</span></td>
                <td class="text-left"><span class="stext-102 cl6 size-206">{age} ans</span></td>
            </tr>
            <tr>
                <td class="pb-2"><span class="stext-102 cl3 size-205">Ville</span></td>
                <td class="text-left"><span class="stext-102 cl6 size-206">{user.ville}</span></td>
            </tr>
            <tr>
                <td class="pb-2"><span class="stext-102 cl3 size-205">Nationalité</span></td>
                <td class="text-left"><span class="stext-102 cl6 size-206">{user.nation}</span></td>
            </tr>
            <tr>
                <td class="pb-2"><span class="stext-102 cl3 size-205">Orientation sexuel</span></td>
                <td class="text-left"><span class="stext-102 cl6 size-206">{user.orientationSxl == 'Homo' ? 'Homosexuel' : 'Hétérosexuel'}</span></td>
            </tr>
        </table>
    </div>
</div>
{moi==1&&
<div class="col-md-12 mt-4" style="text-align: center">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Modifier mon profil</button>
</div>
}
