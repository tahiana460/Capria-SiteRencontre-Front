    import Page from '../components/Page.astro';
    import NavBar from '../components/NavBar.astro';
	
	var userr=localStorage.getItem('user')

	// RECHERCHER
	var filtres=[]
	if(Astro.request.method==='POST'){
		try{			
    		const data=await Astro.request.formData();
			if(data.get('genre')!=undefined){
				filtres.push(1)
				const genre=data.get('genre')
				filtres.push(genre)
				var ageFiltre=data.get('age')
				if(ageFiltre=='Tous'){
					filtres.push('');
				}else if(ageFiltre=='60'){
					filtres.push('60');
				}else{
					ageFiltre=String(ageFiltre)
					var ages:any=ageFiltre?.toString().split('-')
					//console.log(ages)
					ages.map(age => {
						filtres.push(age.toString().split('ans')[0])
					});
				}
				//console.log(filtres)
			}else{
				filtres.push(0)
				const nom=data.get('nom')
				filtres.push(nom)
				//console.log(filtres)
			}			
		}catch(error){
			console.log(error)
		}
	}

	// FILTRE AGE
	var tableauAge:any=[]
	tableauAge.push(18+'ans-'+25+'ans')
	tableauAge.push(25+'ans-'+30+'ans')
	for(let i=30;i<60;i+=10){
		//tableauAge.push([i,i+10])
		var ag=i+'ans-'+(i+10)+'ans'
		tableauAge.push(ag)
	}

	// GET PROFILS AUTRES USERS
    var profils:any=[];
	if(userr!=null)
	{
		var user=JSON.parse(userr)
		user=user[0]
		var obj={'id':user.id,'filtres':filtres}
		const jsonString = JSON.stringify(obj);
		var myHeaders = new Headers();
		myHeaders.append("Content-Type", "application/json");
      	myHeaders.append("Accept", "application/json");

      //console.log(jsonString);
      	const response = await fetch("http://localhost:3100/userList", {
        headers: myHeaders,
        method:'POST',
        body:jsonString
      });
      //console.log(await response.text());
      const reponse = await response.json();
	//console.log(reponse)
	  profils=reponse
	}		    
    //console.log(profils)
		

